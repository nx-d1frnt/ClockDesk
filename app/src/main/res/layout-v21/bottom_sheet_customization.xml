<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_activity_bg"
    style="@style/Widget.Material3.BottomSheet.Modal"
    android:clickable="true"
    app:behavior_hideable="true"
    android:focusable="true">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customization_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/font_size"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <SeekBar
                    android:id="@+id/size_seekbar"
                    style="@style/Widget.Material3.Slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="48sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/transparency"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <SeekBar
                    android:id="@+id/transparency_seekbar"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/transparency_preview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/white" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/font_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingBottom="8dp"
                android:nestedScrollingEnabled="false" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/night_shift_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/night_shift"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:checked="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alignment"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/alignment_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/left_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:text="@string/align_left"
                    android:icon="@drawable/align_horizontal_left"/>

                <Button
                    android:id="@+id/center_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/align_center"
                    android:icon="@drawable/align_horizontal_center"/>

                <Button
                    android:id="@+id/right_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/align_right"
                    android:icon="@drawable/align_horizontal_right"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- New: Time format selection -->
            <TextView
                android:id="@+id/time_format_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_format"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <RadioGroup
                android:id="@+id/time_format_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <RadioButton
                    android:id="@+id/time_24_radio"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/time_24" />

                <RadioButton
                    android:id="@+id/time_12_radio"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_12" />
            </RadioGroup>

            <!-- New: Date format selection -->
            <TextView
                android:id="@+id/date_format_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_format"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <RadioGroup
                android:id="@+id/date_format_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <RadioButton
                    android:id="@+id/date_format_1"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/date_format_short" />

                <RadioButton
                    android:id="@+id/date_format_2"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_format_medium" />

                <RadioButton
                    android:id="@+id/date_format_3"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_format_long" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/apply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/apply" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>