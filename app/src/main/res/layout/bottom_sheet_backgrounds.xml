<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_activity_bg"
    style="@style/Widget.Material3.BottomSheet.Modal">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

    <TextView
        android:id="@+id/backgrounds_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backgrounds_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/background_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:paddingBottom="8dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/weather_bg_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_background"
                android:paddingTop="8dp" android:paddingBottom="8dp" />
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/background_blur_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blur_background"
        android:paddingTop="8dp" android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/blur_intensity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blur_intensity"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <SeekBar
        android:id="@+id/blur_intensity_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:progress="25" />
<!--            <com.google.android.material.materialswitch.MaterialSwitch-->
<!--                android:id="@+id/background_dim_switch"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/dim_background"-->
<!--                android:paddingTop="8dp" android:paddingBottom="8dp" />-->
            <TextView
                android:id="@+id/dim_toggle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dim_toggle"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/dimming_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/off_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:text="@string/dimming_off"/>

                <Button
                    android:id="@+id/continuous_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/dimming_continuous"/>

                <Button
                    android:id="@+id/dynamic_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dimming_dynamic" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <TextView
                android:id="@+id/dimming_intensity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dimming_intensity"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <SeekBar
                android:id="@+id/dimming_intensity_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="25" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/background_zoom_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/background_zoom"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weather_effects_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/weather_effect_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_weather_effects" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/manual_weather_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manual_weather_control"
                android:enabled="false" />

            <HorizontalScrollView
                android:id="@+id/manual_weather_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/weather_type_toggle_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <Button
                        android:id="@+id/btn_weather_clear"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_rain" />

                    <Button
                        android:id="@+id/btn_weather_cloudy"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_cloudy" />
                    <Button
                        android:id="@+id/btn_weather_rain"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_rain" />

                    <Button
                        android:id="@+id/btn_weather_snow"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_snow" />

                    <Button
                        android:id="@+id/btn_weather_fog"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_fog" />

                    <Button
                        android:id="@+id/btn_weather_thunder"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather_storm" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/weather_intensity_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/weather_intensity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_intensity"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/weather_intensity_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="100" />
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="12dp">

        <Button
            android:id="@+id/clear_background_button_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_background" />

        <Button
            android:id="@+id/apply_background_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginStart="8dp" />
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
