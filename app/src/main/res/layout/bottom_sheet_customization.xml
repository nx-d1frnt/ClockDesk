<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_activity_bg"
    android:clickable="true"
    app:behavior_hideable="true"
    style="@style/Widget.Material3.BottomSheet.Modal"
    android:focusable="true">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customization_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/font_size"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <SeekBar
                    android:id="@+id/size_seekbar"
                    style="@style/Widget.Material3.Slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/default_size_value" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/max_width_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Width"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <SeekBar
                        android:id="@+id/max_width_seekbar"
                        style="@style/Widget.Material3.Slider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="100" />
                    <TextView
                        android:id="@+id/max_width_value"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100%" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/transparency"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <SeekBar
                    android:id="@+id/transparency_seekbar"
                    style="@style/Widget.Material3.Slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:id="@+id/transparency_preview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/white" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/font_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/variable_properties_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Variable Properties"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:id="@+id/var_weight_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textSize="12sp"/>
                    <SeekBar
                        android:id="@+id/var_weight_seekbar"
                        style="@style/Widget.Material3.Slider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="1000"
                        android:min="1" />
                    <TextView
                        android:id="@+id/var_weight_value"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="400"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/var_width_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Width"
                        android:textSize="12sp"/>
                    <SeekBar
                        android:id="@+id/var_width_seekbar"
                        style="@style/Widget.Material3.Slider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="200"
                        android:progress="100"/>
                    <TextView
                        android:id="@+id/var_width_value"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="100"
                        android:textSize="12sp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/var_roundness_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Round"
                        android:textSize="12sp"/>
                    <SeekBar
                        android:id="@+id/var_roundness_seekbar"
                        style="@style/Widget.Material3.Slider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"/>
                    <TextView
                        android:id="@+id/var_roundness_value"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/color_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingBottom="16dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/edit_background_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_background"
                android:visibility="gone"
                tools:visibility="visible"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/night_shift_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/night_shift"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:checked="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/alignment_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/horizontal_alignment"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/alignment_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/left_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:text="@string/align_left"
                    app:icon="@drawable/align_horizontal_left"/>

                <Button
                    android:id="@+id/center_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" android:text="@string/align_center"
                    app:icon="@drawable/align_horizontal_center"/>

                <Button
                    android:id="@+id/right_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/align_right"
                    app:icon="@drawable/align_horizontal_right"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/vertical_alignment_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vertical_alignment"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/vertical_alignment_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                app:singleSelection="true">
                <Button
                    android:id="@+id/align_top_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/align_top"/>

                <Button
                    android:id="@+id/align_center_vertical_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/align_center"
                    />

                <Button
                    android:id="@+id/align_bottom_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/align_bottom"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/widget_order_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/widget_order"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <Button
                    android:id="@+id/move_up_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/widget_order_up" />

                <Button
                    android:id="@+id/move_down_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/widget_order_down" />
            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider" />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/free_mode_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_mode_switch"
                android:textColor="@color/md_theme_error"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:checked="false" />

            <TextView
                android:id="@+id/gravity_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_alignment"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:visibility="visible"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/text_gravity_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                app:singleSelection="true"
                android:visibility="visible">

                <Button
                    android:id="@+id/gravity_left_button"
                    style="@style/Theme.ClockDesk.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/align_start"
                    app:icon="@drawable/align_horizontal_left" />

                <Button
                    android:id="@+id/gravity_center_button"
                    style="@style/Theme.ClockDesk.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Center"
                    app:icon="@drawable/align_horizontal_center"/>

                <Button
                    android:id="@+id/gravity_right_button"
                    style="@style/Theme.ClockDesk.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/align_end"
                    app:icon="@drawable/align_horizontal_right"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/grid_snap_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/snap_to_grid"
                android:checked="true"
                android:paddingBottom="8dp"/>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/ignore_collision_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ignore_collision"
                android:checked="false"
                android:paddingBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/layer_order"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/send_backward_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/send_backward" />

                <Button
                    android:id="@+id/bring_forward_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/bring_forward" />
            </LinearLayout>
            <TextView
                android:id="@+id/time_format_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_format"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <RadioGroup
                android:id="@+id/time_format_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <RadioButton
                    android:id="@+id/time_24_radio"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/time_24" />

                <RadioButton
                    android:id="@+id/time_12_radio"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_12" />
            </RadioGroup>
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/show_am_pm_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_am_pm"
                android:paddingBottom="16dp"
                android:checked="false" />

            <TextView
                android:id="@+id/date_format_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_format"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <RadioGroup
                android:id="@+id/date_format_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <RadioButton
                    android:id="@+id/date_format_1"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/date_format_short" />

                <RadioButton
                    android:id="@+id/date_format_2"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_format_medium" />

                <RadioButton
                    android:id="@+id/date_format_3"
                    style="@style/Widget.Material3.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_format_long" />
            </RadioGroup>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/main_activity_bg"
        android:elevation="8dp"
        android:padding="16dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="@string/cancel" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/apply" />
    </LinearLayout>

</LinearLayout>